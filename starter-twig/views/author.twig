{% extends "base.twig" %}

{% block content %}

	<!-- Page Header -->
	<!-- Set your background image for this header on the line below. -->
	<header class="intro-header" style="background-image: url('')">
			<div class="container">
					<div class="row">
							<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
									<div class="site-heading">
											<h1>{{author.name}}</h1>
											<hr class="small">
											<span class="subheading">posts by {{author.name}}</span>
									</div>
							</div>
					</div>
			</div>
	</header>

	<!-- Main Content -->
  <div class="container">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

						{% for post in posts %}
							{% include 'repeater-post.twig' %}
						{% endfor %}

	          {% include 'partials/pagination.twig' %}

          </div>
      </div>
  </div>

  <hr>

{% endblock %}
