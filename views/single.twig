{% extends "base.twig" %}

{% block content %}

  <!-- Page Header -->
  <!-- Set your background image for this header on the line below. -->
  <header class="intro-header" style="background-image: url('{{post.thumbnail.src}}')">
      <div class="container">
          <div class="row">

              <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  <div class="post-heading">
                      <h1>{{post.title}}</h1>
                      <h2 class="subheading">Sub-headline</h2>
                      <span class="meta">Posted by <a href="{{post.author.path}}">{{ post.author.name }}</a> on {{ post.post_date|date}}</span>
                  </div>
              </div>

          </div>
      </div>
  </header>

  <!-- Post Content -->
  <article>
      <div class="container">
          <div class="row">

              <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                  {{post.content}}
              </div>

          </div>
      </div>
  </article>

  <hr>

{% endblock %}
