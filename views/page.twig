{% extends "base.twig" %}

{% block content %}

	<!-- Page Header -->
	<!-- Set your background image for this header on the line below. -->
	<header class="intro-header" style="background-image: url('{{post.thumbnail.src}}')">
			<div class="container">
					<div class="row">
							<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
									<div class="page-heading">
											<h1>{{post.title}}</h1>
											<hr class="small">
											<span class="subheading">&nbsp;</span>
									</div>
							</div>
					</div>
			</div>
	</header>

	<!-- Main Content -->
	<div class="container">
			<div class="row">
					<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
							{{post.content}}
					</div>
			</div>
	</div>

	<hr>

{% endblock %}
